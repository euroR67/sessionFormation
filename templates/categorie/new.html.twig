{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}

    <h1>Ajouter une catégorie</h1>

    <div class="container">
        {{ form_start(form) }}

            <div class="form-group">
                <label for="">Nom de la catégorie</label>
                {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>

        {{ form_end(form) }}
    </div>

{% endblock %}