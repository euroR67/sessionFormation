{% extends 'base.html.twig' %}

{% block title %}Liste des catégorie{% endblock %}

{% block body %}
    <div class="banner">
        <h2>Liste des catégorie</h2>
    </div>

    <div class="wrapper">
        <div>
            <ul class="lists">
                {% for categorie in categories %}
                    <li><a href="{{ path('show_categorie', {'id': categorie.id}) }}"><i class="fa-solid fa-arrow-right"></i> {{ categorie }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}