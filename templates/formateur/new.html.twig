{% extends 'base.html.twig' %}

{% block title %}Ajouter un formateur{% endblock %}

{% block body %}

    <h1>Ajouter un formateur</h1>

    <div class="container">
        {{ form_start(form) }}

            <div class="form-group">
                <label for="">Nom du formateur</label>
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                <label for="">Prenom du formateur</label>
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>

        {{ form_end(form) }}
    </div>

{% endblock %}