{% extends 'base.html.twig' %}

{% block title %}Ajouter une nouvelle formation{% endblock %}

{% block body %}

    <div class="banner">
        <h2>Ajouter une nouvelle formation</h2>
    </div>

    <div class="wrapper">
        <div class="container">
            {{ form_start(form) }}
    
                <div class="form-group">
                    <label for="">Nom de la formation</label>
                    {{ form_widget(form.nomFormation, {'attr': {'class': 'form-control'}}) }}
                </div>
    
                <div class="form-group">
                    {{ form_row(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
    
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}