{% extends 'base.html.twig' %}

{% block title %}Ajouter un module{% endblock %}

{% block body %}

    <h1>Ajouter un module</h1>

    <div class="container">
        {{ form_start(form) }}
        
            <div class="form-group">
                <label for="">Nom du module</label>
                {{ form_widget(form.nomModule, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                <label for="">Cat√©gorie du module</label>
                {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>

        {{ form_end(form) }}
    </div>

{% endblock %}